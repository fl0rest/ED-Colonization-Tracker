<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Resources</title>
  <style>
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    th { background: #f4f4f4; }
  </style>
</head>
<body>
  <h2>Last Update: {{.LastUpdate}}</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Required</th>
        <th>Provided</th>
        <th>Left</th>
        <th>Payment</th>
      </tr>
    </thead>
    <tbody>
      {{range .Resources}}
        <tr>
          <td>{{.Name}}</td>
          <td>{{.Required}}</td>
          <td>{{.Provided}}</td>
          <td>{{.Diff}}</td>
          <td>{{.Payment}}</td>
        </tr>
      {{else}}
        <tr><td colspan="7">No resources found.</td></tr>
      {{end}}
    </tbody>
  </table>

  <script>
    const evtSource = new EventSource("/events");
    evtSource.onmessage = function(event) {
      const resources = JSON.parse(event.data);
      const tbody = document.querySelector("tbody");
      tbody.innerHTML = "";

      if (!resources) {
        tbody.innerHTML = '<tr><td colspan="7">No resources found.</td></tr>';
        return;
      }
      if (resources.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7">No resources found.</td></tr>';
        return;
      }

      resources.forEach(r => {
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${r.Name}</td>
          <td>${r.Required}</td>
          <td>${r.Provided}</td>
          <td>${r.Diff}</td>
          <td>${r.Payment}</td>
        `;
        tbody.appendChild(row);
      });
    };
  </script>
</body>
</html>
